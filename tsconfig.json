{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}